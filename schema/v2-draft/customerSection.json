{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "DRAFT - FA Metadata Customer Section v2.0 (NOT FOR PRODUCTION USE)",
  "version": "2.0-draft",
  "description": "⚠️ WARNING: This is a DRAFT schema with breaking changes. Use v1.1 for production. This v2-draft uses camelCase property names which are NOT backward compatible with v1.x. Customer-specific metadata fields. This section is fully customizable per organization.",
  "type": "object",
  "properties": {
    "customerSpecific": {
      "description": "Contains customer/organization-specific metadata fields.",
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "sampleId": {
          "description": "Internal sample identifier.",
          "type": "string"
        },
        "orderId": {
          "description": "Internal order/job number.",
          "type": "string"
        },
        "projectId": {
          "description": "Project identifier.",
          "type": "string"
        },
        "lotNumber": {
          "description": "Manufacturing lot number.",
          "type": "string"
        },
        "waferNumber": {
          "description": "Wafer identifier.",
          "type": "string"
        },
        "dieCoordinates": {
          "description": "Die coordinates on wafer (X, Y).",
          "type": "object",
          "properties": {
            "x": {
              "type": [
                "number",
                "string",
                "null"
              ]
            },
            "y": {
              "type": [
                "number",
                "string",
                "null"
              ]
            }
          }
        },
        "customFields": {
          "description": "Additional custom fields as key-value pairs.",
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  }
}