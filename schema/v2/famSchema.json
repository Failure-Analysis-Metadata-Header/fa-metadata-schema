{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "FA Metadata - Root Schema",
    "description": "Combines all FA metadata sections into a single schema. Only the general and method sections are mandatory; other sections are validated when present.",
    "type": "object",
    "properties": {
        "generalSection": {
            "$ref": "./generalSection.json#/properties/generalSection"
        },
        "methodSpecific": {
            "$ref": "./methodSpecific.json#/properties/methodSpecific"
        },
        "customerSpecific": {
            "$ref": "./customerSection.json#/properties/customerSpecific"
        },
        "toolSpecific": {
            "$ref": "./toolSpecific.json#/properties/toolSpecific"
        },
        "dataEvaluation": {
            "$ref": "./dataEvaluation.json#/properties/dataEvaluation"
        },
        "history": {
            "$ref": "./historySection.json#/properties/history"
        }
    },
    "required": [
        "generalSection",
        "methodSpecific"
    ]
}