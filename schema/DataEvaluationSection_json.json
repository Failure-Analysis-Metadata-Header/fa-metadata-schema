                                ]
                            },
                            "properties": {
                                "name": {
                                    "description": "The Name of the specific ROI-Polygon which can be any string.",
                                    "type": "string"
                                },
                                "coordinates": {
                                    "description": "Represents an N x 2 matrix whose rows contain the x and y coordinates of the vertices which define the polygon. The vertices are connected over straight lines and are rudimentary numbered from the first row (first vertice coordinate of the polygon) to the bottom row which represents the last vertice which is also connected to the first vertice to close the polygon. In the json format the matrix is defined as an array of arrays.",
                                    "type": "array",
                                    "items": {
										"type": "number",
                                        "maxItems": 2
                                    }
                                },
                                "area": {
                                    "description": "The Area drawn polygon in the unit of the tools coordinate frame",
                                    "type": "number"
                                },
                                "fillColor": {
                                    "description": "The fill color of the polygon encoded in RGBA.",
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    },
                                    "minItems": 4,
                                    "maxItems": 4
                                },
                                "strokeColor": {
                                    "description": "The color of the stroke the polygon was drawn with.",
                                    "type": "array",
                                    "items": {
                                        "type": "number"
                                    },
                                    "minItems": 3,
                                    "maxItems": 3
                                },
                                "strokeWidth": {
                                    "description": "The width of the stroke in pixels. ",
                                    "type": "number"
                                }
                            }
                        }
                    },
                    "roi-polyline": {
                        "description": "ROI-Polyline is an array which contains all ROI-Polylines selected by the user. A polyline is specified by an array of vertices that are connected over straight lines. The first vertice is the starting point and the last vertice the end point of the vertice (an arrowhed marker is applied to the end of the line). ROI-Polyline contains the name of the polyline, the coordinates of the vertices  as well as color and width of the stroke. ",
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": [
                                "Name",
